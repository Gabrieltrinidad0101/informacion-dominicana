FROM python:3.10-slim

WORKDIR /app

RUN apt-get update && apt-get install -y \
    libgl1 \
    libglib2.0-0 \
    ffmpeg \
    wget \
    && rm -rf /var/lib/apt/lists/*

COPY projects/extractedText/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt
RUN pip install --no-cache-dir watchdog

COPY projects/extractedText/app/ .

ENV PATH="/usr/local/bin:${PATH}"
ENV FLAGS_use_onednn=false
ENV FLAGS_use_mkldnn=false

CMD if [ -d "/app/projects/extractedText/app" ]; then \
        cd /app/projects/extractedText/app && \
        watchmedo auto-restart --directory=. --pattern=*.py --recursive -- python -u -m main; \
    else \
        python -u -m main; \
    fi
